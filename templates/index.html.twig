{% extends 'base.html.twig'%}

{% block title %}Accueil{% endblock %}

{% block body %}
    <section id="partieAccueil">
        <article id="cadreMeteo">
            <h1>Méteo</h1>
            <p>Aujourd'hui il fait un temps à rester chez sois</p>
        </article>
        <article id="cadreBienvenue">
            <h1>Bienvenue</h1>
            <div>
    {# {{ render(url('evenements', {max : 3})) }} #}

        <img src="https://media.istockphoto.com/photos/steam-train-picture-id153055320?k=6&m=153055320&s=612x612&w=0&h=1ZfEmHwe3_rEEguy2w20VzG0EM3V41BHEkSyVOYgcYU=" alt="">




